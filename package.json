{
  "name": "@prb/foundry-template",
  "description": "Foundry-based template for developing Solidity smart contracts",
  "version": "1.0.0",
  "author": {
    "name": "Paul Razvan Berg",
    "url": "https://github.com/PaulRBerg"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0",
    "@uniswap/permit2-sdk": "^1.3.0"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.51.23",
    "@types/bun": "^1.1.6",
    "@types/node": "^22.2.0",
    "ethers": "5.7.2",
    "forge-std": "github:foundry-rs/forge-std#v1.8.1",
    "prettier": "^3.0.0",
    "solhint": "^3.6.2",
    "typescript": "^5.5.4",
    "viem": "^2.19.3",
    "wagmi": "^2.12.5"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "build": "forge build",
    "lint": "bun run lint:sol && bun run prettier:check",
    "lint:sol": "forge fmt --check && bun solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\" --ignore-path \".prettierignore\"",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:coverage:report": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "deploy:localhost": "forge script script/Deploy.s.sol --broadcast --fork-url http://localhost:8545 && forge script script/Deploy.s.sol --broadcast --fork-url http://localhost:8546"
  }
}
